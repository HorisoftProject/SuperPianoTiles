<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Theme.Material.Wallpaper">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Partie terminÃ©e !"
        android:id="@+id/partieterminee"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:text="Votre temps : "
        android:id="@+id/temps"
        android:layout_gravity="center"
        android:layout_below="@+id/partieterminee"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:text="Meilleur temps : "
        android:id="@+id/meilleurtemps"
        android:layout_gravity="center"
        android:layout_below="@+id/temps"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/retry"
        android:text="RETRY"
        android:layout_below="@+id/meilleurtemps"
        android:layout_alignStart="@+id/menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/menu"
        android:layout_below="@+id/meilleurtemps"
        android:layout_alignStart="@+id/temps"
        android:layout_marginTop="39dp" />



</RelativeLayout>